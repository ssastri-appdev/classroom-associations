<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All enrollments
    </h1>

    <a href="/enrollments/new" class="btn btn-block btn-outline-secondary">
      Add a new enrollment
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Course
        </th>

        <th>
          Student
        </th>

       

        <th>
        </th>
      </tr>

      <% @enrollments.each do |enrollment| %>
      <tr>
        <td>
          <%= enrollment.id %>
        </td>

        <td>
          <a href="/courses/<%= enrollment.course_id %>">
            <%= Course.find(enrollment.course_id).title %>
          </a>
        </td>

        <td>
          <a href="/students/<%= enrollment.student_id %>">
            <%= Student.find(enrollment.student_id).first_name %>
            <%= Student.find(enrollment.student_id).last_name %>
          </a>
        </td>

        

        <td>
          <a href="/enrollments/<%= enrollment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
